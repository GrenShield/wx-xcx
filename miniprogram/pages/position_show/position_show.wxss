/* pages/position_show/position_show.wxss */

page {
  position: relative;
  background: #f8f8f8;
  padding-bottom: 120rpx;
  height: auto;
}

view {
  box-sizing: border-box;
}

.span {
  display: inline;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.r_jobdetails {
  width: 710rpx;
  margin: 0 auto;
}

.clearfix {
  clear: both;
  height: 0;
  overflow: hidden;
}

.about-position {
  zoom: 1;
  position: relative;
  padding: 32rpx 24rpx;
  margin: 16rpx 0;
  height: auto;
  background: #fff;
  border-radius: 8rpx;
}

.about-position .title-info {
  width: 100%;
  min-height: 44rpx;
  height: auto;
}

.about-position .job-name {
  width: 60%;
  font-size: 32rpx;
  color: #333;
}

.about-position .job-sal {
  max-width: 50%;
  font-size: 32rpx;
  color: #f30;
  text-align: right;
}

.about-position .comp-name {
  zoom: 1;
  margin: 10rpx 0;
  width: 100%;
  height: 40rpx;
  overflow: hidden;
  font-size: 28rpx;
  color: #888;
}

.about-position .job-detail {
  zoom: 1;
  width: 100%;
  height: 36rpx;
}

.about-position .box1 {
  font-size: 28rpx;
  color: #888;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.about-position .box1 .ads {
  margin-right: 24rpx;
}

.about-position .box1 .exp {
  margin-right: 12rpx;
}

.about-position .time {
  font-size: 24rpx;
  color: #ccc;
  text-align: right;
}

.company-info {
  zoom: 1;
  position: relative;
  padding: 32rpx 24rpx;
  margin-bottom: 16rpx;
  background: #fff;
  border-radius: 8rpx;
}

.company-info navigator {
  display: block;
  width: 100%;
  height: 100%;
}

.company-info .job-img {
  position: absolute;
  top: 32rpx;
  left: 24rpx;
  padding: 10rpx;
  width: 100rpx;
  height: 100rpx;
  border: 1rpx solid #eaeaea;
  border-radius: 50%;
  background: #fff;
}

.company-info .job-img .companyLogo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.company-info .job-img .MenVipUrl {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

.jobP-info {
  padding-left: 144rpx;
  padding-right: 30rpx;
  background: url(//img09.zhaopin.com/2012/other/mobile/m/creatResumeIcon/createR_icon1.png) no-repeat 100%;
  background-size: 14rpx 26rpx;
}

.jobP-info .ellipsis-1 {
  margin-bottom: 10rpx;
  font-size: 32rpx;
  color: #333;
}

.jobP-info .muted {
  font-size: 28rpx;
  color: #888;
}

.jobP-info .muted .span {
  margin: 0 10rpx;
}

.jobP-info .muted .span:first-child {
  margin-left: 0;
}

.companyAdd {
  padding: 32rpx 24rpx;
  margin-top: 16rpx;
  width: 100%;
  min-height: 144rpx;
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}

.companyAdd .tit {
  margin-bottom: 12rpx;
  font-size: 32rpx;
  color: #333;
}

.companyAdd .add {
  position: relative;
  padding-left: 36rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #888;
}

.companyAdd .add .i_city {
  display: inline-block;
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  width: 24rpx;
  height: 30rpx;
  background: url(//img09.zhaopin.cn/2012/other/mobile/m/7.0icon/job_address.png) no-repeat;
  background-size: 24rpx 30rpx;
}

.r_jobdetails .article {
  padding: 32rpx 24rpx;
  margin: 16rpx 0;
  width: 100%;
  background: #fff;
  border-radius: 8rpx;
}

.r_jobdetails .article .h3 {
  margin-bottom: 12rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  color: #333;
}

.r_jobdetails .article .about-main {
  line-height: 48rpx;
  font-size: 28rpx;
  color: #888;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
}

.r_jobdetails .article p {
  word-wrap: break-word;
  overflow: hidden;
}

.r_jobdetails .article .remindtxt {
  margin-top: 24rpx;
  line-height: 32rpx;
  font-size: 24rpx;
  color: #f30;
}

.r_jobdetails .tag-list {
  zoom: 1;
  padding: 32rpx 24rpx 24rpx;
  margin-bottom: 16rpx;
  background: #fff;
}

.r_jobdetails .tag-list .h3 {
  margin-bottom: 24rpx;
  font-size: 32rpx;
  color: #333;
}

.r_jobdetails .tag-list .tag {
  float: left;
  padding: 0 24rpx;
  margin: 0 16rpx 16rpx 0;
  line-height: 52rpx;
  color: #6caac8;
  font-size: 24rpx;
  background: #e9f8ff;
  white-space: nowrap;
  cursor: default;
  border-radius: 8rpx;
}

.j_Recomm {
  width: 710rpx;
  margin: 0 auto;
  background-color: #fff;
  margin-bottom: 32rpx;
  /* border-top: 1rpx solid #e6e6e6 */
}

.j_Recomm .h3 {
  height: 78rpx;
  line-height: 78rpx;
  margin: 0 24rpx;
  background-size: 38rpx 400rpx;
}

.j_Recomm .h3.j {
  background-position: 0 0;
}

.j_Recomm .h3 .span {
  line-height: 78rpx;
  font-size: 32rpx;
  color: #42beff;
}

.j_Recomm .line {
  width: 100%;
  height: 1px;
  background: #e6e6e6;
}

.j_positiolist {
  height: 182rpx;
  padding: 0 24rpx;
  position: relative;
  /* border-bottom: 1px solid #e6e6e6 */
}

.j_positiolist:first-child {
  border-top: 1px solid #e6e6e6;
}

.j_positiolist img {
  top: 46rpx;
  left: 20rpx;
}

.j_positiolist .content {
  width: 100%;
  height: 152rpx;
  padding-top: 30rpx;
}

.j_positiolist .content .box1 {
  width: 100%;
  height: 42rpx;
  line-height: 42rpx;
}

.j_positiolist .content .name {
  float: left;
  width: 70%;
  font-size: 32rpx;
  color: #010101;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.j_positiolist .content .time {
  float: right;
  font-size: 18rpx;
  color: #c8c8c8;
  width: 72rpx;
  text-align: right;
}

.j_positiolist .content .box2 {
  width: 100%;
  height: 38rpx;
  margin: 12rpx 0 6rpx;
}

.j_positiolist .content .company {
  float: left;
  width: 48%;
  font-size: 28rpx;
  color: #646464;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.j_positiolist .content .salary {
  float: right;
  font-size: 26rpx;
  color: #ff6e6f;
  max-width: 228rpx;
  text-align: right;
  margin-top: 4rpx;
}

.j_positiolist .content .ad {
  min-width: 40rpx;
  background: url(//img09.zhaopin.cn/2012/other/mobile/m/6.3.1_icon/index_Recommen.png) no-repeat 50%;
  background-size: 22rpx 64rpx;
  background-position: 0 4rpx;
  margin-right: 20rpx;
}

.j_positiolist .content .ad,
.j_positiolist .content .edu {
  display: block;
  float: left;
  height: 32rpx;
  line-height: 32rpx;
  padding-left: 30rpx;
  font-size: 24rpx;
  color: #b4b4b4;
}

.j_positiolist .content .edu {
  min-width: 76rpx;
  background: url(//img09.zhaopin.cn/2012/other/mobile/m/6.3.1_icon/index_Recommen.png) no-repeat 50%;
  background-size: 22rpx 64rpx;
  background-position: 0 -34rpx;
}

.wrap-button {
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 10rpx 20rpx;
  width: 750rpx;
  height: 108rpx;
  background: #fff;
  overflow: hidden;
}

.btn-now-apply {
  position: absolute;
  right: 0;
  left: 200rpx;
  width: 510rpx;
  display: block;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background: #51a1ff;
  border-radius: 4rpx;
}

.btn-share {
  position: absolute;
  left: 5rpx;
  width: 180rpx;
  height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 4rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-share image {
  display: block;
  width: 44rpx;
  height: 44rpx;
}

.share-button {
  font-weight: normal !important;
  width: 100% !important;
  background: transparent !important;
  min-height: auto !important;
  padding: 0 !important;
  font-size: 17px !important;
  margin: 0 !important;
}

.edit {
  width: 90rpx;
  height: 80rpx;
  background-color: rgba(0, 0, 0, 0.7);
  background-size: 26rpx;
  background-repeat: no-repeat;
  background-position: center center;
  border-radius: 6rpx 0 0 6rpx;
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  bottom: 320rpx;
  right: 0;
  z-index: 20000000;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
}