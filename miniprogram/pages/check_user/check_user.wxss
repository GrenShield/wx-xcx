.user-list {
  padding-top: 40rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.user {
  overflow: hidden;
  margin-bottom: 20rpx;
}

.user .avatar {
  width: 75rpx;
  height: 75rpx;
  display: block;
  float: left;
  margin-top: 12rpx;
}

.user .info {
  margin-left: 27rpx;
  float: left;
  line-height: 40rpx;
}

.info .name {
  font-size: 30rpx;
  margin-right: 30rpx;
}

.info .phone {
  font-size: 24rpx;
}