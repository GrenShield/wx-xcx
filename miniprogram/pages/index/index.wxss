.header {
  position: relative;
}

.banner {
  position: relative;
  z-index: 999;
  width: 750rpx;
  height: 320rpx;
  margin: 0 auto;
  background: #000;
}

.banner .swiper-item {
  width: 750rpx;
  height: 320rpx;
  margin: 0 auto;
  display: block;
}

.banner .navigator {
  width: 750rpx;
  height: 320rpx;
  margin: 0 auto;
