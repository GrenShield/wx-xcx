/* pages/company_show/company_show.wxss */

page {
  font-size: 26rpx;
  color: #333;
  background: #f5f5f5;
  padding-bottom: 30rpx;
}

.r_companydetail {
  width: 95%;
  margin: 0 auto 8px;
}

.r_companydetail .companyInfo {
  position: relative;
  padding-top: 48px;
  width: 100%;
  /* min-height: 176px; */
  overflow: hidden;
}

.companyInfo .companyLogo {
  position: absolute;
  top: 8px;
  left: 50%;
  margin-left: -40px;
  width: 70px;
  height: 70px;
  padding: 5px;
  border-radius: 50%;
  background: #fff;
  /* box-shadow: 0 -4px 6px #c1eaff; */
}

.companyLogo .logo-icon {
  width: 70px;
  height: 70px;
  border-radius: 50%;
}

.companyLogo .MenVipUrl {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 20px;
  height: 20px;
  border-radius: 50%;
}

.companyInfo .info-content {
  padding: 46px 12px 12px;
  /* min-height: 120px; */
  line-height: 24px;
  background: #fff;
  font-size: 14px;
  color: #888;
  text-align: center;
  /* box-shadow: 0 0 7px #c1eaff; */
  border-radius: 4px;
}

.info-content .name {
  font-size: 16px;
  color: #333;
}

.companyAdd {
  padding: 16px 12px;
  margin-top: 8px;
  width: 100%;
  min-height: 72px;
  background: #fff;
  border-radius: 4px;
  overflow: hidden;
}

.companyAdd .tit {
  margin-bottom: 6px;
  font-size: 16px;
  color: #333;
}

.companyAdd .add {
  position: relative;
  padding-left: 18px;
  line-height: 20px;
  font-size: 14px;
  color: #888;
}

.companyAdd .add .i_city {
  display: inline-block;
  position: absolute;
  top: 2px;
  left: 2px;
  width: 12px;
  height: 15px;
  background: url(//img09.zhaopin.cn/2012/other/mobile/m/7.0icon/job_address.png) no-repeat;
  background-size: 12px 15px;
}

.company-box {
  padding: 16px 12px;
  margin-top: 8px;
  width: 100%;
  background: #fff;
  border-radius: 4px;
}

.company-box .tit {
  margin-bottom: 6px;
  font-size: 16px;
  color: #333;
}

.company-box .about-main {
  line-height: 24px;
  font-size: 14px;
  color: #888;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  word-wrap: break-word;
}

.company-box .link-more {
  height: 24px;
  line-height: 24px;
  font-size: 12px;
  color: #51a1ff;
  text-align: right;
}

.boxsizing {
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.compaydetail-more {
  padding-bottom: 30px;
  z-index: 120;
  margin-top: 10%;
  width: 100%;
  height: 92%;
  max-height: 672px;
  min-height: 400px;
  overflow-y: scroll;
  background: #fff;
}

.compaydetail-more .top {
  position: relative;
  padding: 0 12px;
  height: 44px;
  line-height: 44px;
  background: #f2f8fb;
  font-size: 16px;
}

.compaydetail-more .top .cancel {
  display: inline-block;
  position: absolute;
  top: 0;
  left: 12px;
  width: 44px;
  color: #51a1ff;
}

.compaydetail-more .top .txt {
  display: inline-block;
  width: 100%;
  color: #333;
  text-align: center;
}

.compaydetail-box {
  padding: 16px 12px;
  line-height: 24px;
  font-size: 14px;
  color: #888;
}

.job-box {
  margin: 0 auto;
  width: 95%;
  overflow: hidden;
}

.job-box .span {
  padding: 0 12px;
  line-height: 40px;
  font-size: 16px;
  color: #888;
}

.j_Recomm {
  width: 710rpx;
  margin: 0 auto;
  background-color: #fff;
  margin-bottom: 32rpx;
  /* border-top: 1rpx solid #e6e6e6 */
}

.j_Recomm .h3 {
  height: 78rpx;
  line-height: 78rpx;
  margin: 0 24rpx;
  background-size: 38rpx 400rpx;
}

.j_Recomm .h3.j {
  background-position: 0 0;
}

.j_Recomm .h3 .span {
  line-height: 78rpx;
  font-size: 32rpx;
  color: #42beff;
}

.j_Recomm .line {
  width: 100%;
  height: 1px;
  background: #e6e6e6;
}

.j_positiolist {
  height: 182rpx;
  padding: 0 24rpx;
  position: relative;
  /* border-bottom: 1px solid #e6e6e6 */
}

.j_positiolist:first-child {
  border-top: 1px solid #e6e6e6;
}

.j_positiolist img {
  top: 46rpx;
  left: 20rpx;
}

.j_positiolist .content {
  width: 100%;
  height: 152rpx;
  padding-top: 30rpx;
}

.j_positiolist .content .box1 {
  width: 100%;
  height: 42rpx;
  line-height: 42rpx;
}

.j_positiolist .content .name {
  float: left;
  width: 70%;
  font-size: 32rpx;
  color: #010101;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.j_positiolist .content .time {
  float: right;
  font-size: 18rpx;
  color: #c8c8c8;
  width: 72rpx;
  text-align: right;
}

.j_positiolist .content .box2 {
  width: 100%;
  height: 38rpx;
  margin: 12rpx 0 6rpx;
}

.j_positiolist .content .company {
  float: left;
  width: 48%;
  font-size: 28rpx;
  color: #646464;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.j_positiolist .content .salary {
  float: right;
  font-size: 26rpx;
  color: #ff6e6f;
  max-width: 228rpx;
  text-align: right;
  margin-top: 4rpx;
}

.j_positiolist .content .ad {
  min-width: 40rpx;
  background: url(//img09.zhaopin.cn/2012/other/mobile/m/6.3.1_icon/index_Recommen.png) no-repeat 50%;
  background-size: 22rpx 64rpx;
  background-position: 0 4rpx;
  margin-right: 20rpx;
}

.j_positiolist .content .ad,
.j_positiolist .content .edu {
  display: block;
  float: left;
  height: 32rpx;
  line-height: 32rpx;
  padding-left: 30rpx;
  font-size: 24rpx;
  color: #b4b4b4;
}

.j_positiolist .content .edu {
  min-width: 76rpx;
  background: url(//img09.zhaopin.cn/2012/other/mobile/m/6.3.1_icon/index_Recommen.png) no-repeat 50%;
  background-size: 22rpx 64rpx;
  background-position: 0 -34rpx;
}

.edit {
  width: 90rpx;
  height: 80rpx;
  background-color: rgba(0, 0, 0, 0.7);
  background-size: 26rpx;
  background-repeat: no-repeat;
  background-position: center center;
  border-radius: 6rpx 0 0 6rpx;
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  bottom: 320rpx;
  right: 0;
  z-index: 20000000;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
}